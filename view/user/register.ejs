	<div id="main">
		<div class="wrapper">
		  <div class="inner">
			<form action="" method="post" onsubmit="return validateForm()">
			  <h3>Registration Form</h3>
			  <div class="form-wrapper">
				<% if (typeof message !== 'undefined') { %>
				<p style="color: red; margin-top: 10px"><%= message %></p>
				<br />
				<% } %>
				<!-- Placeholder for the error message -->
				<p id="error-message" style="color: red; margin-top: 10px"></p>
				<label>User Name</label>
				<input
				  type="text"
				  class="form-control"
				  name="name"
				  id="name"
				  pattern="^[a-zA-Z\s]+$"
				  title="Only letters and whitespace is allowed"
				  required
				/>
			  </div>
			  <div class="form-wrapper">
				<label for="">Email</label>
				<input type="email" class="form-control" name="email" id="email" required />
			  </div>
			  <div class="form-wrapper">
				<label for="">Phone Number</label>
				<input type="tel" class="form-control" name="phone" id="phone" pattern="^\d{10}$" title="Phone number must be 10 digits" required />
			  </div>
			  <div class="form-wrapper">
				<label for="">Password</label>
				<input
				  type="password"
				  class="form-control"
				  name="password"
				  id="password"
				  minlength="4"
				  title="Password must be at least 4 characters"
				  required
				/>
			  </div>
			  <div class="checkbox">
				Already a user?
				<a href="/login">Click here</a>
			  </div>
			  <button type="submit">Register Now</button>
			</form>
		  </div>
		</div>
	  </div>
	  
	  <script>
		function validateForm() {
		  var name = document.getElementById('name').value;
		  var email = document.getElementById('email').value;
		  var phone = document.getElementById('phone').value;
		  var password = document.getElementById('password').value;
		  var errorMessage = document.getElementById('error-message');
		  var namePattern = /^[a-zA-Z\s]+$/;
		  var phonePattern = /^\d{10}$/;
		  var passwordPattern = /^(?=.*[a-zA-Z]).{5,}$/;
	  
		  // Check for invalid characters in the username
		  if (!namePattern.test(name)) {
			errorMessage.textContent = 'Username must contain only alphabets and spaces.';
			return false;
		  }
	  
		  // Check for valid email format
		  if (!validateEmail(email)) {
			errorMessage.textContent = 'Please enter a valid email address.';
			return false;
		  }
	  
		  // Check for valid phone number
		  if (!phonePattern.test(phone)) {
			errorMessage.textContent = 'Phone number must be 10 digits.';
			return false;
		  }
	  
		  // Check password length and if it contains at least one alphabet
		  if (!passwordPattern.test(password)) {
			errorMessage.textContent = 'Password must be at least 5 characters long and contain at least one alphabet.';
			return false;
		  }
	  
		  // Form is valid
		  errorMessage.textContent = '';
		  return true;
		}
	  
		function validateEmail(email) {
		  var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
		  return emailPattern.test(email);
		}
	  </script>

    
