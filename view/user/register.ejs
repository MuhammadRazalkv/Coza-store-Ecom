    <div id="main">
		<div class="wrapper">
		  <div class="inner">
			<form action="" method="post" onsubmit="return validateForm()">
			  <h3>Registration Form</h3>
			  <div class="form-wrapper">
				<% if (typeof message !== 'undefined') { %>
				<p style="color: red; margin-top: 10px"><%= message %></p>
				<br />
				<% } %>
				<!-- Placeholder for the error message -->
				<p id="error-message" style="color: red; margin-top: 10px"></p>
				<label>User Name</label>
				<input
				  type="text"
				  class="form-control"
				  name="name"
				  id="name"
				  pattern="^[a-zA-Z\s]+$"
				  title="Only letters and whitespace is allowed"
				  required
				/>
			  </div>
			  <div class="form-wrapper">
				<label for="">Email</label>
				<input type="email" class="form-control" name="email" required />
			  </div>
			  <div class="form-wrapper">
				<label for="">Phone Number</label>
				<input type="number" class="form-control" name="phone" required />
			  </div>
			  <div class="form-wrapper">
				<label for="">Password</label>
				<input
				  type="password"
				  class="form-control"
				  name="password"
				  id="password"
				  minlength="4"
				  title="Password must be at least 4 characters"
				  required
				/>
			  </div>
			  <div class="checkbox">
				Already a user?
				<a href="/login">Click here</a>
			  </div>
			  <button type="submit">Register Now</button>
			</form>
		  </div>
		</div>
	  </div>
	  
	  <script>
		  function validateForm() {
    // Get form values
    var name = document.getElementById('name').value;
    var password = document.getElementById('password').value;
    var errorMessage = document.getElementById('error-message');
    var namePattern = /^[a-zA-Z\s]+$/; // Updated regex to allow only alphabets and spaces

    // Check for invalid characters in the username
    if (!namePattern.test(name)) {
      errorMessage.textContent = 'Username must contain only alphabets and spaces.';
      return false;
    } else {
      errorMessage.textContent = ''; // Clear any previous error message
    }

    // Check password length
    if (password.length < 4) {
      errorMessage.textContent = 'Password must be at least 4 characters long.';
      return false;
    }

    // Form is valid
    return true;
  }
	  </script>
	  

    
