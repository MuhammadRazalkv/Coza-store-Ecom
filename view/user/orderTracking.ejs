                    </div>
                  </div>
          
                  <!-- Address Details -->
                  <div class="address-details">
                    <h5>Shipping Address</h5>
                    <p>
                      <% Object.entries(order.shippingAddress).forEach(([key, value]) => { %>
                        <strong><%= key.charAt(0).toUpperCase() + key.slice(1) %>:</strong> <%= value %><br>
                      <% }); %>
                    </p>
                  </div>
