                  <% } %>
                  <%= item.variantName %>
                </td>
                <td>₹ <%= item.variantPrice %></td>
                <td><%= item.quantity %></td>
                <td>₹ <%= item.variantPrice * item.quantity %></td>
                <td><%= item.orderStatus %></td>
              </tr>
            <% }); %>
