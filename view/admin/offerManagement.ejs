            <div class="cm-header">
              <h1>Offer Management</h1>
            </div>
            
            <div class="container cm-container">
              <div class="d-flex mb-4">
                <a href="/admin/addOffer" class="btn btn-primary addNew">+ Add a new offer</a>
              </div>
            
              <div id="couponList" class="row">
                <% if (offers && offers.length > 0) { %>
                  <% offers.forEach(offer => { %>
                    <div class="col-md-4">
                      <div class="cm-card">
                        <div class="cm-card-info">
                          <div class="d-flex justify-content-between">
                            <h3><%= offer.offerName %></h3>
                            <form class="delete-coupon-form-unique" data-delete-offer-id="<%= offer._id %>">
                              <button type="button" class="delete-coupon-btn-unique btn-danger">X</button>
                            </form>
                          </div>
                          <h6><%= offer.offerType %></h6>
                          <p>Discount: <%= offer.discountPercentage %> % off</p>
                          <p>Applied Item: <%= offer.appliedItem %> </p>
                          <p style="color: red;">Expiry Date: <%= new Date(offer.expiryDate).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' }) %></p>
                        </div>
                        <div class="cm-card-actions">
                          <a href="/admin/offers/editOffer?offerId=<%= offer._id %>">
                            
                            <button class="cm-btn cm-btn-edit">Edit</button>
                          </a>
                          <form class="block-product-form-unique" data-block-offer-id="<%= offer._id %>">
                            <button type="button" class="cm-btn <%= offer.listed ? 'cm-btn-delete' : 'cm-btn-list' %> block-product-btn-unique">
                              <%= offer.listed ? 'Unlist' : 'List' %>
                            </button>
                          </form>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                <% } else { %>
                  <div class="cm-no-coupons">
                    No offers found.
                  </div>
                <% } %>
              </div>
