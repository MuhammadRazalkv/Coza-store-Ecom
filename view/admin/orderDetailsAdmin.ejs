    <div class="container product-container">
        <div id="heading">
            <h3 class="mb-4">Order Details</h3>
        </div>
       
        <div class="row mb-3">
            <div class="col-md-12">
                <label for="productName">User Name:</label>
                <p id="productName"><%= order.userId.name %></p>
            </div>
        </div>
       
        <div class="row d-flex  mb-3">
            <div class="col-md-5">
                <div>
                    <label for="productDescription">Shipping Address:</label>
                 <p>   <% Object.entries(order.shippingAddress).forEach(([key, value]) => { %>
                        <%= key %>: <%= value %> <br>
                    <% }); %>
                </p>
                </div>
               
            </div>
         <div class="col-md-5">
            <label for="productDescription">Order Details:</label>
            <p>Payment Method  : <%= order.paymentMethod %><br>
               Subtotal        : <%= order.subTotal %> <br>
               <% if (order.couponDetails.claimedAmount) { %> 
                Coupon discount : <%= order.couponDetails.claimedAmount %><br>
              <% } else { %>
                Coupon discount : 0 <br>
              <% } %>
               Offer discount   :<%= order.TotalOfferDiscount %><br>
               Delivery Charge : <%= order.deliveryCharge %></br>
       <strong>Grand Total     : <%= order.grandTotal %></strong></p>
         </div>   

        </div>
    </div>
    
    <!--* ======== Order Details ========== -->
    
    <table class="product-table mb-3">
        <tbody>
            <tr>
                <th>Products</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity </th>
                <th>Total</th>
                <th>Payment Method</th>
                <th>Status</th>
                <th>Action</th>
                
            </tr>
            <% if (order && order.orderItems.length >0) { %>
              <% order.orderItems.forEach(item => { %>
                <tr>
                  <td><img style="height: 40px; width: 40px;" src="/assets/productImages/<%= item.variantId.variantImg[0] %>" alt="Product Image" ></td>
                  <td><%= item.variantName %></td>
                  <td><%= item.variantPrice %></td>
                  <td><%= item.quantity%> </td>  
                  <td><%= (item.quantity * item.variantPrice) %></td>                             
                  <td><%= order.paymentMethod %></td>
                  <td><%= item.orderStatus %></td>
                  <td>
                    <select class="form-control status-select " style="color: white; background-color: rgb(226, 55, 55);" data-order-id="<%= order._id %>" data-variant-id="<%= item.variantId._id %>" data-current-status="<%= item.orderStatus %>">
                      <%  const currentStatus = item.orderStatus;
                         const nextStatuses = validStatusTransitions[currentStatus] || []; 
                       
                         %>    
                       <option value="<%= currentStatus %>" selected><%= currentStatus %></option>
                          
                            <%  nextStatuses.forEach(status => { %>
                          
                           <option value="<%= status %>" ><%= status %></option>
                           
                      <% }); %>
                      %>
                    </select>
                    
                    
                  </td>     
                  <% if(item.orderStatus == 'Return requested') {%>
                    <td> <%= item.returnReason %></td>
                    <% } %>     
                </tr>


                <% }) %>
            <%  } else { %>
              <tr>
                <td colspan="7">No Orders  found</td>
                
              </tr>
          
             <% } %>
            
           
        </tbody>
    </table>
