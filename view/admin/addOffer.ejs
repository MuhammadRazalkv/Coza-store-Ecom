  .ac-header {
  text-align: center;
  margin-bottom: 10px; /* Reduced margin */
}

.ac-container {
  max-width: 600px;
  margin: 0 auto;
}

.ac-card {
  background-color: #191c24;
  padding: 20px; /* Reduced padding */
  border-radius: 15px;
  margin-top: 30px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.ac-card h2 {
  color: #bdbdae;
  margin-bottom: 15px; /* Reduced margin */
  font-size: 24px;
  text-align: center;
}

.ac-form-group label {
  color: #bdbdae;
  font-weight: bold;
}

.ac-form-group input,
.ac-form-group select {
  background-color: #2e2e2e;
  color: #bdbdae;
  border: 1px solid #444444;
  border-radius: 5px;
  padding: 8px; /* Reduced padding */
  margin-bottom: 10px; /* Reduced margin */
  width: 100%;
}

.ac-btn {
  padding: 8px 15px; /* Reduced padding */
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 14px;
  transition: background-color 0.3s;
  width: 100%;
  margin-bottom: 10px;
}

.ac-btn-submit {
  background-color: #2196F3;
  color: #ffffff;
}

.ac-btn-submit:hover {
  background-color: #1e88e5;
}

.ac-btn-cancel {
  background-color: #e82e21;
  color: #ffffff;
}

.ac-btn-cancel:hover {
  background-color: #e53935;
}

#alertMessage {
  display: none;
}

