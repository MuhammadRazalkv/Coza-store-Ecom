  <div class="container ac-container">
    <div class="ac-card">
      <h2>Create a New offer </h2>
      <form id="addOffer">

        <div class="alert alert-danger" role="alert" id="alertMessage">
          This is alert message
        </div>

        <div class="form-group ac-form-group">
          <label for="couponCode">Offer Name</label>
          <input type="text" class="form-control" id="offerName" placeholder="Enter offer name">
        </div>

        <div class="form-group ac-form-group">
            <label for="couponCode">Offer Type</label>
            <select name="" id="selectType">
                <option value="" selected>Select one</option>

                <option value="Category Offer">Category Offer</option>
                <option value="Product Offer">Product Offer</option>
            </select>
          </div>

          <div class="form-group ac-form-group" id="categoryContainer" style="display: none;">
            <label for="categorySelect">Select Category</label>
            <select id="categorySelect" class="form-control">
              <option value="" selected>Select a category</option>
              <% categories.forEach(category => { %>
                <option value="<%= category._id %>"><%= category.name %></option>
              <% }) %>
            </select>
          </div>
        
          <div class="form-group ac-form-group" id="productContainer" style="display: none;">
            <label for="productSelect">Select Product</label>
            <select id="productSelect" class="form-control">
              <option value="" selected>Select a product</option>
              <% products.forEach(product => { %>
                <option value="<%= product._id %>"><%= product.productName %></option>
              <% }) %>
            </select>
          </div>

          
          <div class="form-group ac-form-group">
            <label for="discountPercentage">Discount Percentage</label>
            <input type="number" class="form-control numberVal" id="discountPercentage" placeholder="Enter discount percentage" min="0">
          </div>
          
         
        <div class="form-group ac-form-group">
          <label for="expiryDate">Expiry Date</label>
          <input type="date" class="form-control" id="expiryDate">
        </div>
        
        <button type="submit" class="ac-btn ac-btn-submit">Add offer</button>
        <a href="/admin/offers"><button  type="button" class="ac-btn ac-btn-cancel">Cancel</button></a>
      </form>
