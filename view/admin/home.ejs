<script>

 
    document.addEventListener('DOMContentLoaded', async function () {
  
    const filterSelect = document.getElementById('filterType');
    let chartInstance = null;

    const renderChart = (xValues, yValues) => {
       
        if (chartInstance) {
            chartInstance.destroy();
        }

        
var barColors = ["red", "green","blue","orange","brown"];

chartInstance =  new Chart("myChart", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {
                display: false 
            },
    title: {
      display: true,
      text: "Top 5 best selling products "
    }
  }
});
      
    };

  const fetchAndDisplayData = async (url) => {
    try {
        const response = await fetch(url, {
            headers: {
                'Accept': 'application/json'
            }
        });
        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }
        const {xValues,yValues} = await response.json();
      
        renderChart(xValues,yValues);
    } catch (error) {
        console.error('Failed to fetch and display data:', error);
    }
};


    filterSelect.addEventListener('change', async function() {
        const filter = filterSelect.value;
      
        await fetchAndDisplayData(`/admin/home?filter=${filter}`);
    });

  
    filterSelect.dispatchEvent(new Event('change'));
});
 </script>







        
