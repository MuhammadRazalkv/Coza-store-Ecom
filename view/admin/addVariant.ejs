    <div class="container">
      <h2 class="mb-4">Add New Variant</h2>
      <div id="messageContainer" style="color: red; font-size: 15px;"></div>
      <form id="addVariantForm" enctype="multipart/form-data">

        <div class="form-group mb-3">
          <label for="productName">Name</label>
          <input type="text" class="form-control" id="productName" name="productName" value="<%= product.productName %>" disabled>
          <input type="hidden" id="productId" value="<%= product._id %>" name="productId">
        </div>

        <input type="hidden" value="<%= product.productName %>" name="productName">
        <div class="form-group mb-3">
          <label for="productCategory">Category</label>
          <input type="text" class="form-control" value="<%= product.categoryId.name %>" required disabled>
        </div>

        <div class="form-group mb-3">
          <label for="productCategory">Brand:</label>
          <input type="text" class="form-control" value="<%= product.productBrand %>" required disabled>
        </div>

        <div class="form-group mb-3">
          <label for="productPrice">Color:</label>
          <input type="text" class="form-control" id="productColor" name="variantColor" placeholder="Enter variant Color" required>
        </div>

        <div class="form-group mb-3">
          <label>Select Sizes</label><br>
          <label><input type="checkbox" name="sizes" value="S" onchange="updateSizes(this)"> S</label>
          <label><input type="checkbox" name="sizes" value="M" onchange="updateSizes(this)"> M</label>
          <label><input type="checkbox" name="sizes" value="L" onchange="updateSizes(this)"> L</label>
          <label><input type="checkbox" name="sizes" value="XL" onchange="updateSizes(this)"> XL</label><br>
          <input type="hidden" name="sizesInput" id="sizes">
        </div>

        <div class="form-group mb-3">
          <label for="productPrice">Price</label>
          <input type="number" class="form-control" id="productPrice" name="variantPrice" placeholder="Enter product price" required>
        </div>

        <div class="form-group mb-3">
          <label for="productPrice">DiscountedPrice</label>
          <input type="number" class="form-control" id="discountPrice" name="variantDiscountPrice" placeholder="Enter Discounted price" required>
        </div>

        <div class="form-group mb-3">
          <label for="productStock">Stock</label>
          <input type="number" class="form-control" id="productStock" name="variantStock" placeholder="Enter stock quantity" required>
        </div>

        <div class="form-group mb-3">
          <label for="productDescription">Description:</label>
          <textarea class="form-control" id="productDescription" rows="3" required disabled><%= product.description %></textarea>
        </div>

        <div class="form-group mb-3">
          <label for="productImage">Product Image</label>
          <div class="custom-file">
            <input type="file" class="custom-file-input" id="productImage1" name="variantImg1" required>
          </div>

          <div class="custom-file">
            <input type="file" class="custom-file-input" id="productImage2" name="variantImg2" required>
          </div>

          <div class="custom-file">
            <input type="file" class="custom-file-input" id="productImage3" name="variantImg3" required>
          </div>
        </div>

        <div class="col-md-6">
          <label>Chosen Images</label><br>
          <div id="chosenImages"></div>
        </div>

        <button type="submit" class="btn btn-primary">Add Variant</button>
      </form>
      
    </div>
    <!-- ------ Model for Cropping ----- -->
    <div class="modal fade" id="cropperModal" tabindex="-1" role="dialog" aria-labelledby="cropperModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="cropperModalLabel">Crop Image</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="img-container">
              <img id="image" src="" alt="Image to crop">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" id="cancelCropButton" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" id="cropButton">Crop</button>
          </div>
        </div>
      </div>
    </div>

