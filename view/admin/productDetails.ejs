<div class="container product-container">
    <div id="heading">
        <h3 class="mb-4">Product Details</h3>
        <a href="/admin/product/edit?id=<%= product._id %>"> <i class="fas fa-edit edit-button"></i></a>
    </div>
   
    <div class="row mb-3">
        <div class="col-md-12">
            <label for="productName">Product Name:</label>
            <p id="productName"><%= product.productName %></p>
        </div>
        <div class="col-md-6">
            <label for="productCategory">Category:</label>
            <p id="productCategory"><%= product.categoryId.name %></p>
        </div>
        <div class="col-md-6">
          <label for="productCategory">Brand:</label>
          <p id="productCategory"><%= product.productBrand %></p>
      </div>
    </div>
 
    <div class="row mb-3">
        <div class="col-md-12">
            <label for="productDescription">Description:</label>
            <p id="productDescription"><%= product.description %></p>
        </div>
    </div>
</div>

<!--* ======== Variant Details ========== -->


<div class="container product-container">
    <div id="heading">
      <h3 class="mb-4">Variants</h3>
      <a href="/admin/product/addVariant?id=<%= product._id %>" class="add-variant-button"> <i class="fas fa-plus-circle"></i>Add Variant</a>
  </div>
  
      <table class="product-table">
          <tbody>
              <tr>
                  <th>Variant Name</th>
                  <th>Image</th>
                  <th>Color</th>
                  <th>Sizes</th>
                  <th>Price</th>
                  <th>Discounted Price</th>
                  <th>Stock</th>
                  <th>Actions</th>
              </tr>
              <% if (variant.length>0) { %>
                <% variant.forEach(variant => { %>
                  <tr>
                    <td><%= variant.variantName %> - <%= variant.variantColor %></td>
                    <td><img class="img-fluid" style="height: 50px; width: 50px;" src="/assets/productImages/<%= variant.variantImg[0] %>" alt="Variant Image"></td>

 

                    <td><%= variant.variantColor %></td>
                    <td><%= variant.variantSizes.join(', ') %></td>
                    <td><%= variant.variantPrice %></td>
                    <td><%= variant.variantDiscountPrice %></td>
                    <td><%= variant.variantStock %></td>
                    <td>
                       <a href="/admin/product/editVariant?id=<%= variant._id %>" class="btn  btn-sm btn-primary" style=" color: white; background-color: blue; border: none;">Edit</a>
                     

                        <form class="block-product-form" data-id="<%= variant._id %>" style="display:inline;">
                          <button type="button" class="btn <%= variant.variantListed ?  'btn btn-danger' : 'btn-success' %> btn-sm block-product-btn">
                            <%= variant.variantListed ? 'Unlist' : 'List' %>
                          </button> 
                        </form>

                    </td>  
                    
                  </tr>
                  <% }) %>
              <%  } else { %>
                <tr>
                  <td colspan="7">No variants found</td>
                  
                </tr>
               
            
               <% } %>
             
          </tbody>
      </table>
  </div>

