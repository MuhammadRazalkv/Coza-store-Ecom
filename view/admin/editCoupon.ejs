      <h2>Edit Coupon</h2>
      <form id="editCoupon">

        <div class="alert alert-danger" role="alert" id="alertMessage">
            This is alert message
        </div>

       <input type="hidden" value="<%= coupon._id %>" id="couponId">

       <div class="form-group ac-form-group">
        <label for="couponCode">Coupon Name</label>
        <input type="text" class="form-control" id="couponName" placeholder="Enter coupon name" value="<%= coupon.couponName %>">
      </div>

        <div class="form-group ac-form-group">
            <label for="couponCode">Coupon Code</label>
            <input type="text" class="form-control" id="couponCode" placeholder="Enter coupon code" value="<%= coupon.couponCode %>">
        </div>

        <div class="form-group ac-form-group">
            <label for="minimumPurchaseAmount">Minimum purchase amount</label>
            <input type="number" class="form-control numberVal" id="minimumPurchaseAmount" placeholder="Enter minimum purchase amount" min="0" value="<%= coupon.minPurchaseAmount %>">
        </div>

        <div class="form-group ac-form-group">
            <label for="discountPercentage">Discount Percentage</label>
            <input type="number" class="form-control numberVal" id="discountPercentage" placeholder="Enter discount percentage" min="0" value="<%= coupon.discountPercentage %>">
        </div>

        <div class="form-group ac-form-group">
            <label for="maxRedeemAmount">Maximum redeem amount</label>
            <input type="number" class="form-control numberVal" id="maxRedeemAmount" placeholder="Enter maximum amount" min="0" value="<%= coupon.maxRedeemAmount %>">
        </div>

        <div class="form-group ac-form-group">
            <label for="expiryDate">Expiry Date</label>
            <input type="date" class="form-control" id="expiryDate" value="<%= coupon.expiryDate.toISOString().split('T')[0] %>">
        </div>

        <button type="submit" class="ac-btn ac-btn-submit">Edit Coupon</button>
        <a href="/admin/couponList"><button type="button" class="ac-btn ac-btn-cancel">Cancel</button></a>
    </form>
    </div>
